<?xml version="1.0" encoding="utf-8"?>
<s:Group xmlns:fx="http://ns.adobe.com/mxml/2009" 
		 xmlns:s="library://ns.adobe.com/flex/spark" 
		 xmlns:mx="library://ns.adobe.com/flex/mx"
		 xmlns:classes="classes.*">
	<fx:Script>
		<![CDATA[
			import classes.UIController;
		]]>
	</fx:Script>
	<fx:Declarations>
		<!-- Place non-visual elements (e.g., services, value objects) here -->
	</fx:Declarations>
	<s:Rect id="bgFill" width="100%" height="100%">
		<s:fill>
			<s:BitmapFill source="@Embed('assets/progress-bg.png')" fillMode="repeat" />
		</s:fill>
	</s:Rect>
	<s:Rect id="fgFill" width="{UIController.instance.deviceDisk.getVisibleUsageWidth(width)}" height="100%">
		<s:fill>
			<s:BitmapFill source="@Embed('assets/progress-fg.png')" fillMode="repeat" />
		</s:fill>
	</s:Rect>
</s:Group>
